#include <iostream>
#include <stdio.h>
using namespace std;

int main() 
{
    int n;
    double x;
    double res =0;
    int l=1;
    cout<<"Введите n: ";
    cin>>n;
    cout<<endl<<"Введите x: ";
    cin>>x;
    for(int i=1; i<=n; i++)
    {
        l=l*i;
        res=res+(x/l);
        
    }
cout<<" вывод: "<<res;
return 0;

}
